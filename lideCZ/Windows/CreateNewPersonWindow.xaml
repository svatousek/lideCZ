<Window x:Class="lideCZ.Windows.CreateNewPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lideCZ.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="Azure"
        Title="CreateNewPersonWindow" Height="300" Width="300">
    <Grid>
        <Label HorizontalAlignment="Left" Content="FirstName:" Margin="96,105,0,0" VerticalAlignment="Top" Height="55" Width="80"></Label>
        <TextBox x:Name="FN" HorizontalAlignment="Left" Margin="161,111,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        
        <Label HorizontalAlignment="Left" Content="LastName:" Margin="96,136,0,0" VerticalAlignment="Top" Height="24" Width="80"></Label>
        <TextBox x:Name="LN" HorizontalAlignment="Left" Margin="161,142,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        
        <Label HorizontalAlignment="Left" Content="Age:" Margin="119,166,0,0" VerticalAlignment="Top" Height="27" Width="80"></Label>
        <TextBox  x:Name="Age" HorizontalAlignment="Left" Margin="161,171,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="LN_TextChanged"/>
        
        <Button Content="Save" HorizontalAlignment="Center" Margin="0,218,0,0" VerticalAlignment="Top" Width="72" Click="SaveButton_Click"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="201,218,0,0" VerticalAlignment="Top" Width="72" Click="CloseButton_Click"/>
        <Image Margin="18,46,214,170" Source="/Resources/createUserImage.png" Stretch="Fill"/>


    </Grid>
</Window>
